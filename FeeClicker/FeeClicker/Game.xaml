<Window x:Class="FeeClicker.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeeClicker"
        mc:Ignorable="d"
        Title="Game" Height="500" Width="850">
    <Grid>
        <Button x:Name="button_etoiles" Content="Poussières d'étoile" HorizontalAlignment="Left" Margin="94,185,0,0" VerticalAlignment="Top" Width="136" Height="72" Click="addStar"/>
        <Label x:Name="label_compteur_etoiles" Content="Etoiles" HorizontalAlignment="Left" Margin="55,74,0,0" VerticalAlignment="Top"/>
        <Label x:Name="compteur_etoiles" Content="0" HorizontalAlignment="Left" Margin="213,74,0,0" VerticalAlignment="Top"/>
        <Label x:Name="compteur_fees" Content="0" HorizontalAlignment="Left" Margin="728,144,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_fee" Content="Ajouter fée" HorizontalAlignment="Left" Margin="571,129,0,0" VerticalAlignment="Top" Width="105" Height="41" Click="buyFairy"/>
        <Label x:Name="label_etoiles_seconde" Content="Etoiles par seconde" HorizontalAlignment="Left" Margin="55,111,0,0" VerticalAlignment="Top"/>
        <Label x:Name="etoiles_seconde" Content="0" HorizontalAlignment="Left" Margin="213,111,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_save_and_quit" Content="Save &amp; quit" HorizontalAlignment="Left" Margin="626,31,0,0" VerticalAlignment="Top" Width="85" Height="35" Click="saveAndQuit"/>

    </Grid>
</Window>
